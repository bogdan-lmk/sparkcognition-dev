header
  display flex
  padding 40px 55px 0
  align-items: center
  justify-content: space-between
  z-index:  11
  margin-bottom: 160px
.nav
  display flex
  z-index: 11

.nav-link-header
  color: white
  font-size: 25px
  text-transform: uppercase
  font-weight: 900
  z-index: 11
  transition:  all 0.3s ease-in-out

.nav-link-header.nav-link-header--active
  color: marigold

.logo-img
  z-index: 11

.header-nav-list
  position: relative
  padding: 10px 15px
  margin-right: 40px
  transition:  all 0.3s ease-in-out
  &:active .nav-link-header
    color: marigold
  &:last-child
    margin-right: 0
  &:before
    content: ''
    position: absolute
    width: 100%
    height: 200%
    top -100%
    left: 0
    background-color: white
    transition:  all 0.3s ease-in-out
    opacity: 0
    transform: translateY(-60%)
  &:hover
    transition:  all 0.3s ease-in-out
  &:hover:before
    opacity: 0.75
    transform: translateY(0%)
    transition:  all 0.3s ease-in-out
    z-index: -1

.header-nav-list
  &:hover .nav-link-header
    color: light-navy
    transition:  all 0.3s ease-in-out
